@model Cinema.Models.Stage
@{
    ViewBag.Title = "Stage";
}
<link href="@Url.Content("~/Content/Template.css")" rel="stylesheet" />
<style>
    .header {
        padding: 60px;
        text-align: center;
        color: #CCCC00;
        font-size: 30px;
    }

    input[type=button], input[type=submit], input[type=reset] {
        background-color: #CCCC00;
        border: none;
        color: black;
        padding: 16px 32px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
    }
</style>
<div class="header">
    <h2>Create Stage</h2>
</div>

<div>
    @using (Html.BeginForm("SaveStage", "Stage"))//first: actionResult. second: controller
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.StageName)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.StageName, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.NumberSeats)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.NumberSeats, new { @class = "form-control" })</div>
        </div><br />
        @*<div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Available)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Available, new { @class = "form-control" })</div>
        </div><br />*@
        <input type="submit" value="Create Stage" class="btn btn-primary" />
    }

</div>