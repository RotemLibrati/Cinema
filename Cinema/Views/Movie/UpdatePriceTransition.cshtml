
@model Cinema.Models.Movie
@{
    ViewBag.Title = "Movie";
}

<div>
    @using (Html.BeginForm("UpdatePrice", "Movie"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Title)</div>
            <div name="TitleMovie" class="col-lg-10">@Html.TextBoxFor(a => a.Title, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Price)</div>
            <div name="PriceMovie" class="col-lg-10">@Html.TextBoxFor(a => a.Price, new { @class = "form-control" })</div>
        </div><br />
        <input type="submit" value="Change" class="btn btn-primary" />
    }
</div>
