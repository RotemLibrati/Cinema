@model Cinema.Models.Movie
@{
    ViewBag.Title = "Movie";
}
<link href="@Url.Content("~/Content/Template.css")" rel="stylesheet" />
<style>
    .header {
        padding: 60px;
        text-align: center;
        color: #CCCC00;
        font-size: 30px;
    }
    input[type=button], input[type=submit], input[type=reset] {
        background-color: #CCCC00;
        border: none;
        color: black;
        padding: 16px 32px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
    }
</style>
<div class="header">
    <h2>Create Movie</h2>
</div>

<div>
    @using (Html.BeginForm("SaveMovieDetails", "Movie"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Title)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Title, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.DateMovie)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.DateMovie, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Category)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Category, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Price)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Price, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Stage)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Stage, new { @class = "form-control" })</div>
        </div><br />
        <div class="row">
            <div class="col-lg-2">@Html.LabelFor(a => a.Limit)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Limit, new { @class = "form-control" })</div>
        </div><br />
        <input type="submit" value="Create Movie" class="btn btn-primary" />
    }

</div>